include header
.wrap
  .content
    header(class='site-header')
      include site_header
    .container
      .row
        div(class='col col-md-12')
          h2(class='panel-title')=good.name
        div(class='col col-md-4')
          img(
            src='images/'+good.image
            class='goods-big-image'  
          )
        div(class='col col-md-8')
          p=good.description
          span(class='success') ЦІНА: #{ good['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} UAH
          button(
              class='button button-success add-to-cart'
              data-goods-id=good.id 
          ) TO CART
